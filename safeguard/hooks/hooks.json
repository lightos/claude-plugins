{
  "description": "Blocks dangerous bash commands with category-based protection",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/block-dangerous.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
